{
  "version": "gapi.v1",
  "apiPath": "/api/v1/city",
  "package": "city",
  "description": "City API",
  "definitions": {
    "GeoLocation": {
      "import": {
        "from": "./root",
        "name": "Geo"
      }
    },
    "City": {
      "description": "A city",
      "attributes": [
        {
          "name": "name",
          "type": "String",
          "required": true,
          "description": "The name of the city"
        },
        {
          "name": "location",
          "type": "GeoLocation",
          "required": true,
          "description": "The location of the city"
        }
      ]
    }
  },
  "actions": {
    "GetCity": {
      "description": "Get a city by id",
      "method": "GET",
      "parameters": [
        {
          "name": "id",
          "type": "String",
          "required": true,
          "description": "The id of the city"
        }
      ],
      "returns": [
        {
          "type": "City",
          "description": "The city"
        },
        {
          "type": "Error",
          "description": "The error"
        }
      ]
    }
  }
}
