{
  "version": "gapi.v1",
  "apiPath": "/api/v1/city",
  "description": "City API",
  "outputs": [
    {
      "kind": "client",
      "language": "typescript",
      "filePath": "${ProjectDir}/web/gapi/city.ts"
    },
    {
      "kind": "server",
      "language": "golang",
      "package": "city",
      "filePath": "${ProjectDir}/server/gapi/city.go"
    }
  ],
  "definitions": {
    "GeoLocation": {
      "from": "./root",
      "name": "Geo"
    },
    "City": {
      "name": {
        "type": "String",
        "required": true,
        "description": "The name of the city"
      },
      "location": {
        "type": "GeoLocation",
        "required": true,
        "description": "The location of the city"
      }
    }
  },
  "actions": {
    "GetCity": {
      "description": "Get a city by id",
      "method": "GET",
      "parameters": [
        {
          "name": "id",
          "description": "The id of the city",
          "type": "String",
          "required": true
        }
      ],
      "returns": [
        {
          "type": "City",
          "description": "The city"
        },
        {
          "type": "Error",
          "description": "The error"
        }
      ]
    }
  }
}
