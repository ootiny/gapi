{
  "version": "gapi.v1",
  "path": "/api/v1/city",
  "client": {
    "typescript": {
      "file": "${project}/web/api/gapi-city.ts"
    }
  },
  "server": {
    "golang": {
      "package": "city",
      "file": "gapi-city.go"
    }
  },
  "import": {
    "GeoLocation": {
      "from": "../root",
      "class": "Geo"
    }
  },
  "class": {
    "City": {
      "name": {
        "type": "String",
        "required": true
      },
      "location": {
        "type": "GeoLocation",
        "required": true
      }
    }
  },
  "action": {
    "GetCity": {
      "method": "GET",
      "args": [
        {
          "name": "id",
          "type": "String",
          "required": true
        }
      ],
      "return": ["City", "Error"]
    }
  }
}
